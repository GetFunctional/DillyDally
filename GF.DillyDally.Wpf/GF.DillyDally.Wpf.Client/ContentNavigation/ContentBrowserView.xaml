<UserControl
    x:Class="GF.DillyDally.Wpf.Client.ContentNavigation.ContentBrowserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:local="clr-namespace:GF.DillyDally.Wpf.Client.ContentNavigation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type={x:Type local:ContentBrowserViewModel}}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <dx:DXTabControl
        IsSynchronizedWithCurrentItem="True"
        ItemsSource="{Binding ActiveNavigators, Mode=OneWay}"
        SelectedItem="{Binding CurrentActiveNavigator, Mode=TwoWay}">

        <!--
            ItemContainerStyle="{StaticResource ViewModelBrowserTabItemStyle}"
            Style="{StaticResource InvisibleTabControlStyle}"
        -->

        <dxmvvm:Interaction.Behaviors>
            <dxmvvm:EventToCommand
                Command="{Binding CloseNavigatorCommand}"
                EventName="TabHiding"
                PassEventArgsToCommand="True" />
        </dxmvvm:Interaction.Behaviors>
        <dx:DXTabControl.View>
            <dx:TabControlScrollView
                NewButtonShowMode="InTabPanel"
                NewTabCommand="{Binding AddNavigatorCommand, Mode=OneTime}"
                RemoveTabItemsOnHiding="False" />
        </dx:DXTabControl.View>
    </dx:DXTabControl>
</UserControl>