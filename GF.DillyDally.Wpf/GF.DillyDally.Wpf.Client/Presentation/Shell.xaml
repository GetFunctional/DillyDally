<Window
    x:Class="GF.DillyDally.Wpf.Client.Presentation.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="http://schemas.getfunctional.de/dillydally/converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:headerMenu="clr-namespace:GF.DillyDally.Wpf.Client.Presentation.HeaderMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:presentation="clr-namespace:GF.DillyDally.Wpf.Client.Presentation"
    Title="Dilly Dally"
    Width="1280"
    Height="800"
    d:DataContext="{d:DesignInstance Type={x:Type presentation:ShellViewModel}}"
    FontFamily="{StaticResource SourceSansProBlack}"
    FontSize="{StaticResource ParagraphFontSize}"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/GF.DillyDally.Wpf.Theme;component/StyleGuide/Typography.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <conv:ContentToVisiblityConverter x:Key="ContentToVisiblityConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>

        <Grid
            x:Name="Overlay"
            Panel.ZIndex="1000"
            Visibility="{Binding OverlayContent, Converter={StaticResource ContentToVisiblityConverter}}">
            <Grid.Background>
                <SolidColorBrush Opacity=".5" Color="Black" />
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="3">
                <ContentControl Content="{Binding OverlayContent, Mode=OneWay}" />
            </Border>
        </Grid>

        <dxlc:LayoutGroup Orientation="Vertical">
            <headerMenu:HeaderMenuView
                Height="70"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                DataContext="{Binding HeaderMenuViewModel}" />
            <ContentControl Content="{Binding ContentBrowserViewModel, Mode=OneWay}" />
        </dxlc:LayoutGroup>
    </Grid>
</Window>