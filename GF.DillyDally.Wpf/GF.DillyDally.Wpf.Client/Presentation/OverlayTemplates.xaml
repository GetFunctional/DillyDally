<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:client="clr-namespace:GF.DillyDally.Wpf.Client"
    xmlns:presentation="clr-namespace:GF.DillyDally.Wpf.Client.Presentation">

    <DataTemplate x:Key="OverlayTemplate" DataType="{x:Type presentation:OverlayViewModel}">
        <Grid>
            <Grid.Background>
                <SolidColorBrush Opacity=".5" Color="Black" />
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="12.5*" />
                <RowDefinition Height="75*" />
                <RowDefinition Height="12.5*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="3">
                <ContentControl Content="{Binding OverlayContent, Mode=OneWay}" />
            </Border>
        </Grid>
    </DataTemplate>
</ResourceDictionary>