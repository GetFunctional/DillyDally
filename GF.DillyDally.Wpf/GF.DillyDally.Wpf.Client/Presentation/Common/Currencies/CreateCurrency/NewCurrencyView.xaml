<UserControl
    x:Class="GF.DillyDally.Wpf.Client.Presentation.Common.Currencies.NewCurrencyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:client="clr-namespace:GF.DillyDally.Wpf.Client"
    xmlns:currencies="clr-namespace:GF.DillyDally.Wpf.Client.Presentation.Common.Currencies"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type={x:Type currencies:NewCurrencyViewModel}}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <dxlc:LayoutGroup
        GroupBoxDisplayMode="Normal"
        Header="Neue Währung anlegen"
        Orientation="Vertical"
        View="GroupBox">
        <dxlc:LayoutItem Label="Name" LabelPosition="Top">
            <dxe:TextEdit EditValue="{Binding CurrencyName, Mode=TwoWay}" EditValuePostMode="Immediate" />
        </dxlc:LayoutItem>
        <dxlc:LayoutItem Label="Kürzel" LabelPosition="Top">
            <dxe:TextEdit EditValue="{Binding CurrencyCode, Mode=TwoWay}" EditValuePostMode="Immediate" />
        </dxlc:LayoutItem>
    </dxlc:LayoutGroup>
</UserControl>