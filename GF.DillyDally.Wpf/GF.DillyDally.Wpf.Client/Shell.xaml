<Window
    x:Class="GF.DillyDally.Wpf.Client.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:local="clr-namespace:GF.DillyDally.Wpf.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dilly Dally"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type={x:Type local:ShellViewModel}}"
    mc:Ignorable="d">

    <dxlc:LayoutGroup Orientation="Vertical">
        <dxlc:LayoutGroup VerticalAlignment="Top" Orientation="Horizontal">
            <TextBlock FontSize="28" Text="Rewardsytem" />
            <TextBlock FontSize="28" Text="Ernährung" />
            <TextBlock FontSize="28" Text="Sonstiges" />
        </dxlc:LayoutGroup>

        <ContentControl Content="{Binding ContentBrowserViewModel, Mode=OneWay, IsAsync=True}" />
    </dxlc:LayoutGroup>
</Window>